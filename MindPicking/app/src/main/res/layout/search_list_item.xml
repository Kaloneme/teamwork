<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp">
    <ImageView
        android:id="@+id/search_list_item_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"/>
    <RelativeLayout
        android:layout_toRightOf="@+id/search_list_item_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/search_list_item_title"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/search_list_item_folder"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_below="@id/search_list_item_title"/>
        <TextView
            android:id="@+id/search_list_item_time"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_below="@id/search_list_item_folder"/>
    </RelativeLayout>
</RelativeLayout>
